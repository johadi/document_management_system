{
  "name": "document_management_system",
  "version": "1.0.0",
  "description": "The Document management system is a system that manages documents with types, users and user roles. Each document defines access rights; the document defines which roles can access it",
  "main": "app.js",
  "scripts": {
    "start": "node node_modules/gulp/bin/gulp",
    "test_db_migrate": "NODE_ENV=test sequelize db:migrate",
    "test_undo_migrate": "NODE_ENV=test sequelize db:migrate:undo:all",
    "test": "NODE_ENV=test nyc --reporter=html --reporter=text mocha server/tests/**/*.spec.js --reporter spec --compilers js:babel-register --timeout 35000",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela-eshaibu/document_management_system.git"
  },
  "keywords": [
    "document",
    "management",
    "system",
    "API",
    "JavaScript"
  ],
  "author": "Shaibu Emmanuel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andela-eshaibu/document_management_system/issues"
  },
  "homepage": "https://github.com/andela-eshaibu/document_management_system#readme",
  "dependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.1",
    "cors": "^2.8.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "faker": "^4.1.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-shell": "^0.6.3",
    "js-logger": "^1.3.0",
    "jsonwebtoken": "^7.3.0",
    "morgan": "^1.8.1",
    "nodemon": "^1.11.0",
    "pg": "^6.1.5",
    "pg-hstore": "^2.3.2",
    "sequelize": "^3.30.2",
    "sequelize-cli": "^2.7.0",
    "underscore": "^1.8.3",
    "validatorjs": "^3.11.0"
  },
  "devDependencies": {
    "babel-istanbul": "^0.12.2",
    "chai": "^3.5.0",
    "coveralls": "^2.13.0",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "istanbul": "^0.4.5",
